{
  "name": "faster-whisper-node",
  "version": "0.1.0",
  "description": "Fast Whisper speech-to-text for Node.js using CTranslate2. No Python required.",
  "main": "index.js",
  "types": "index.d.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/manmal/faster-whisper-node.git"
  },
  "homepage": "https://github.com/manmal/faster-whisper-node#readme",
  "bugs": {
    "url": "https://github.com/manmal/faster-whisper-node/issues"
  },
  "author": "Manuel Maly",
  "license": "MIT",
  "keywords": [
    "whisper",
    "speech-to-text",
    "transcription",
    "audio",
    "voice",
    "asr",
    "ctranslate2",
    "faster-whisper",
    "native",
    "rust",
    "napi"
  ],
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "preinstall": "./scripts/download-prebuilt.sh || true",
    "build:rust": "cd crates/engine && napi build --platform --release",
    "build": "npm run build:rust",
    "postbuild": "node scripts/post-build.js",
    "test": "node test.js",
    "test:unit": "node --test tests/unit/*.test.js",
    "test:integration": "node --test tests/integration/*.test.js",
    "test:e2e": "node --test tests/e2e/*.test.js",
    "test:phase3": "node tests/phase3.test.js",
    "test:phase4": "node tests/phase4.test.js",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:e2e",
    "test:comprehensive": "npm run test && npm run test:all && npm run test:phase3 && npm run test:phase4",
    "benchmark": "node benchmarks/transcription.bench.js",
    "stress:server": "node stress-tests/server.js",
    "stress:test": "node stress-tests/concurrent.test.js",
    "stress:test:100": "node stress-tests/concurrent.test.js --requests=100",
    "stress:test:500": "node stress-tests/concurrent.test.js --requests=500",
    "stress:workers": "node stress-tests/worker-pool.test.js",
    "stress:workers:100": "node stress-tests/worker-pool.test.js --requests=100",
    "stress:engines": "node stress-tests/multi-engine.test.js",
    "stress:memory": "node stress-tests/memory.test.js",
    "stress:memory:gc": "node --expose-gc stress-tests/memory.test.js --gc",
    "stress:features": "node stress-tests/feature-stress.test.js",
    "stress:all": "npm run stress:features && npm run stress:memory && npm run stress:engines && npm run stress:workers",
    "lint": "echo 'No linter configured yet'",
    "prepublishOnly": "npm run build && npm run test:all"
  },
  "files": [
    "index.js",
    "index.d.ts",
    "crates/engine/*.node",
    "crates/engine/*.dylib",
    "crates/engine/*.so*",
    "crates/engine/*.dll",
    "scripts/",
    "README.md",
    "LICENSE",
    "THIRD_PARTY_LICENSES.md"
  ],
  "napi": {
    "name": "whisper-live-engine",
    "triples": {
      "defaults": true,
      "additional": [
        "aarch64-apple-darwin",
        "aarch64-unknown-linux-gnu",
        "x86_64-apple-darwin",
        "x86_64-unknown-linux-gnu",
        "x86_64-pc-windows-msvc"
      ]
    }
  },
  "devDependencies": {
    "@napi-rs/cli": "^2.18.0"
  }
}
